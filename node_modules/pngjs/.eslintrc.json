{
  "parserOptions": { "ecmaVersion": 2018 },
  "extends": ["eslint:recommended", "prettier"],
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "no-var": "error"
  },
  "overrides": [
    {
      "files": ["test/*.js", "examples/*.js"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
